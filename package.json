{
  "name": "bloinx-web",
  "version": "0.0.4",
  "private": true,
  "license": "UNLICENSED",
  "homepage": "https://bloinx-web.web.app/",
  "scripts": {
    "flow": "flow",
    "start": "craco start",
    "build": "rm -r build && craco build",
    "test": "craco test --watchAll=false",
    "test:watch": "craco test -u",
    "test:coverage": "craco test --coverage --watchAll=false",
    "eject": "craco eject",
    "lint": "eslint .",
    "deploy": "firebase deploy --only hosting",
    "deploy:UAT": "firebase hosting:channel:deploy UAT",
    "commitlint": "commitlint --from=development",
    "release": "standard-version && git push --follow-tags origin development && yarn build && yarn deploy:UAT"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/coverage/**",
      "!**/node_modules/**",
      "!**/babel.config.js",
      "!**/jest.setup.js"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@ant-design/icons": "^4.6.2",
    "@craco/craco": "^6.2.0",
    "@date-io/date-fns": "1.3.13",
    "@material-ui/core": "^4.12.1",
    "@material-ui/pickers": "^3.3.10",
    "@metamask/detect-provider": "^1.2.0",
    "antd": "^4.16.7",
    "axios": "^0.21.1",
    "classnames": "^2.3.1",
    "craco-antd": "^1.19.0",
    "craco-less": "^1.18.0",
    "date-fns": "^2.22.1",
    "firebase": "^8.10.0",
    "http": "^0.0.1-security",
    "less-loader": "^10.0.1",
    "mockdate": "^3.0.5",
    "moment": "^2.29.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-firebase-hooks": "^3.0.4",
    "react-intl": "^5.20.4",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "react-test-renderer": "^17.0.2",
    "redux": "^4.1.0",
    "redux-thunk": "^2.3.0",
    "sass": "^1.35.2",
    "serve": "^12.0.0",
    "web-vitals": "^1.0.1",
    "web3": "^1.4.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.1.10",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "2.3.2",
    "standard-version": "^9.3.1"
  }
}
